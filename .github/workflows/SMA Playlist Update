name: SMA Playlist Update

on:
  workflow_dispatch:  # bisa dijalankan manual
  schedule:
    - cron: "0 0 * * *"  # setiap hari jam 00:00 UTC

jobs:
  update-playlist:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repo
        uses: actions/checkout@v4
        with:
          token: ${{ secrets.GH_TOKEN }}

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install dependencies
        run: |
          pip install requests rich

      - name: Run playlist script
        run: |
          python SMA/main.py

      - name: Commit & Push playlist
        env:
          GITHUB_USER: ${{ github.actor }}
          GITHUB_EMAIL: "${{ github.actor }}@users.noreply.github.com"
          GITHUB_TOKEN: ${{ secrets.GH_TOKEN }}
          GITHUB_REPO: ${{ github.repository }}
          GITHUB_BRANCH: master
        run: |
          git config user.name "${GITHUB_USER}"
          git config user.email "${GITHUB_EMAIL}"
          git add playlist.m3u
          git commit -m "Update playlist [Automated]" || echo "No changes to commit"
          git push https://${GITHUB_USER}:${GITHUB_TOKEN}@github.com/${GITHUB_REPO}.git ${GITHUB_BRANCH}
